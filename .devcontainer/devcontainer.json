// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Ansiblinux",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/home/vscode/.local/bin",
		"ANSIBLE_CONFIG": "/workspaces/my-ansible-linux/ansible.cfg"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true
		},
		"ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
			"plugins": "git ansible docker history F-Sy-H zsh-autosuggestions",
			"omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"installDockerBuildx": true,
			"version": "latest",
			"dockerDashComposeVersion": "v2",
			"azureDnsAutoDetection": false
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.isort",
				"redhat.vscode-yaml",
				"redhat.ansible",
				"eamodio.gitlens",
				"GitHub.vscode-pull-request-github"
			]
		}
	},
	"postCreateCommand": "pip3 --disable-pip-version-check --no-cache-dir install --user -r .devcontainer/requirements.txt && activate-global-python-argcomplete"
}